<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentacion.details.InfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/text_margin">

        <ImageView
            android:id="@+id/caratula"
            android:layout_width="150dp"
            android:layout_height="225dp"
         />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/text_margin">

            <TextView
                android:id="@+id/estreno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tenet_estreno"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/duracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tenet_duracion"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_movie_add_fav"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Favoritos"
                app:icon="@drawable/ic_corazon_on"
                app:iconTint="@color/gray" />

            <Button
                android:id="@+id/button_movie_delete_fav"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Favoritos"
                android:visibility="visible"
                app:icon="@drawable/ic_corazon_on"
                app:iconTint="@color/pink" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>